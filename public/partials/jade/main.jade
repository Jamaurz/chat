.row
    .userList.col-sm-4
        .roomsContainer
            b ROOMS
            | &#x9;
            #rooms
                ul
                    li(ng-repeat='room in my.rooms' ng-click='my.switchRoom(room)') {{room}}
            |     
            input#nameRoom(class='form-control')
            |     
            input#addRoom(type='button', class='btn btn-chat btn-block', value='Create Room')
            |     
            #users
                b USERS
                ul 
                    li(ng-repeat='user in my.users' ng-hide='user == my.currentUser'){{user}}
                

            ul
                li(ng-repeat='msg in my.serverMessage'){{msg.data.username}} : {{msg.data.msg}}
            | 
    .col-sm-8            
        #conversation
            .conversationContainer
                #message
                    h2 {{my.currentRoom}}
                    ul
                        li(ng-repeat='msg in my.chatMessage') {{msg.username}}: {{msg.msg}}
                | &#x9;
                input#data(class='form-control' ng-model='my.data')
                | &#x9;
                input#datasend(type='button', class='btn btn-chat btn-block', value='send' ng-click='my.datasend()')
